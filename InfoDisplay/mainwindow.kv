<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 1, 0, 0, 0

<SeparatorY@Widget>:
    id: separator
    size_hint_y: None
    height: 6
    thickness: 2
    canvas:
        Color:
            rgb: .82, .82, .82
        Rectangle:
            pos: self.pos[0], separator.center_y
            size: separator.width, self.thickness

<SeparatorX@Widget>:
    id: separator
    size_hint_x: None
    width: 2
    thickness: 2
    canvas:
        Color:
            rgb: .24, .65, .94
        Rectangle:
            pos: separator.center_x, self.pos[1]
            size: self.thickness, separator.height


<RunWindow@GridLayout>:
    cols: 1
    GridLayout:
        size_hint: 1, 0.08
        cols: 4
        Label:
            text: 'Processes:'
            size_hint: 0.5, 1
        TextInput:
            multiline: False
            text: '1'
            size_hint: 0.2, 1
            id: cores
        Label:
            size_hint: 0.7, 1
            text: 'Tune Parameters'
        CheckBox:
            size_hint: 0.2, 1
            active: False
            on_active: app.tuneParametersCheckBox(*args)
    GridLayout:
        cols: 2
        id: continue_tuning_layout
        disabled: True
        size_hint: 1, 0.08

        Label:
            text: 'Continue Tuning'
        CheckBox:
            active: False
            on_active: app.continueTuningCheckBox(*args)

    GridLayout:
        cols: 2
        size_hint: 1, 0.08
        Label:
            text: 'Default Parameters'
        CheckBox:
            id: use_defaults
            on_active: app.on_checkbox_active(*args)

    GridLayout:
        cols: 2
        size_hint: 1, 0.08
        Label:
            text: 'Repetitions:'
        TextInput:
            multiline: False
            text: '1'
            id: repetitions

    ScrollView:
        GridLayout:
            size_hint_y: None
            cols: 1
            row_default_height: root.height * 0.06
            height: self.minimum_height
            id: parameters_layout
    GridLayout:
        size_hint: 1, 0.08
        cols: 2
        Label:
            text: 'Model Name:'
        TextInput:
            multiline: False
            text: 'json_test'
            id: run_name


<RenderWindow@GridLayout>:
    cols: 1

    GridLayout:
        cols: 2
        size_hint: 1, 0.08
        Label:
            text: 'Select Model:'
        Spinner:
            id: model_selection
            on_text: app.selectedModel(*args)


    GridLayout:
        cols: 1
        id: render_selections


        GridLayout:
            cols: 2

            size_hint: 1, 0.08

            Label:
                text: 'All Runs:'
            CheckBox:
                id: use_defaults
                on_active: app.allRunsCheckBox(*args)

        GridLayout:
            cols: 1
            id: individuals_layout

            GridLayout:
                cols: 2
                size_hint: 1, 0.16
                Label:
                    text: 'Select Run:'
                Spinner:
                    id: run_selection
                    on_text: app.selectedRun(*args)
                Label:
                    text: 'Select Individuals:'
                Button:
                    text: 'Select All'
                    on_press: app.selectAllIndividuals()


            ScrollView:
                GridLayout:
                    size_hint_y: None
                    cols: 2
                    row_default_height: root.height * 0.06
                    height: self.minimum_height
                    id: individuals_selection

<TuningResultsWindow@GridLayout>:
    cols: 1

    GridLayout:
        cols: 2
        size_hint: 1, 0.08
        Label:
            text: 'Select Model:'
        Spinner:
            id: tuning_model_selection
            on_text: app.selectedModelForTuning(*args)
    Button:
        size_hint: 1, 0.08
        text: 'Generate Tuning Results'
        on_press: app.generateTuningDict()
    GridLayout:
        cols: 3
        size_hint: 1, 0.08
        Label:
            size_hint_x: 0.5
            text: 'Variable'
        Label:
            size_hint_x: 0.25
            text: 'Best Values'
        Label:
            size_hint_x: 0.25
            text: 'Fitness'

    ScrollView:
        id: tuning_scroll_view
        GridLayout:
            size_hint_y: None
            cols: 1
            row_default_height: root.height * 0.06
            height: self.minimum_height
            id: tuning_results

<MainWindowGrid>:
    cols: 1
    GridLayout:
        cols: 2
        GridLayout:
            cols: 1
            Button:
                on_press: app.runAll()
                text: "Run All"
            Button:
                on_press: app.initializeOnly()
                text: "Initialize Only"
            Button:
                on_press: app.profiling()
                text: "Profiling"
            Button:
                on_press: app.render()
                text: "Render"
            Button:
                on_press: app.findParetoFrontier()
                text: "Find Pareto Frontier"
            Button:
                on_press: app.tuneModel()
                text: "Generate Tuning Results Dictionary"
        GridLayout:
            cols: 1
            GridLayout:
                cols: 1
                id: info_layout

            Button:
                size_hint: 1, 0.2
                id: run_button
                text: "Run"
                on_press: app.runButton()